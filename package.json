{
  "name": "carteado-app",
  "private": true,
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": ">=20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "clean": "git clean -fdX -- ./backend/dist ./frontend/.next ./frontend/out ./shared/dist || exit 0",
    "build": "npm run build -w shared && npm run build -w backend && npm run build -w frontend",
    "lint": "npm run lint -ws --if-present",
    "typecheck": "npm run ts-check -ws --if-present",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run build",
    "validate:ci": "npm run lint && npm run typecheck && npm run test -- --ci --coverage && npm run build",
    "dev": "npm run dev --workspace=backend & npm run dev --workspace=frontend",
    "dev:run": "npm run validate && npm run dev",
    "test": "jest",
    "test:backend": "npm test --workspace=backend",
    "test:frontend": "npm test --workspace=frontend",
    "test:backend:watch": "npm run test:backend -- --watch",
    "test:frontend:watch": "npm run test:frontend -- --watch",
    "deploy:dev": "docker-compose -f docker-compose-dev.yml up --build",
    "dev:services": "docker compose -f docker-compose.services.yml up -d",
    "dev:services:down": "docker compose -f docker-compose.services.yml down",
    "deploy:prod": "docker compose -f deploy/docker-compose-prod.yml up --build",
    "deploy:prod:local": "npm run build && docker compose -f deploy/docker-compose.prod.local.yml up --build",
    "ssh": "ssh -i ~/.ssh/id_ed25519 franmlfran@34.10.106.241",
    "ssh:tunnel": "ssh -i ~/.ssh/id_ed25519 -L 27017:localhost:27017 franmlfran@34.10.106.241"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "@types/react-i18next": "^8.1.0",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.2.0",
    "bufferutil": "^4.0.9",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-pretty": "^7.0.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prisma": "^6.16.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "utf-8-validate": "^6.0.5",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}

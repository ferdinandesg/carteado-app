{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es6",
    "rootDirs": ["./", "../shared"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@models/*": ["./src/contexts/*"],
      "@styles/*": ["./src/styles/*"],
      "@tests/*": ["./src/tests/*"],
      "shared/*": ["../shared/*"]
    },
    "types": ["@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/react",
    "../shared"
  ],
  "exclude": ["node_modules"]
}
